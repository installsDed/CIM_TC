<body>
    <title>Inicio</title>
    <script type="text/javascript" src="sweetAlert2.all.min.js"></script>
    <link rel="stylesheet" href="estilo.css">
    <% if (typeof alert != "undefined"){%>
        <script>
            Swal.fire({
                title: '<%= alertTitle %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                timer: '<%= timer %>'
            }).then(()=>{
                window.location = '/<%= ruta %>'
            })
        </script>
    <% } %> 
    <div class="dashboard-container">

        <aside class="sidebar">
            <h2 class="sidebar-title">Sistema de Almacenaje</h2>

            <nav class="sidebar-nav">
                <a href="" class="nav-link">Inicio</a>
                <form action="verificacion" method="POST">
                    <input type="submit" class="nav-link" value="Nuevo maquinado">
                </form>
                <form action="tabla" method="POST">
                    <input type="submit" class="nav-link" value="Almacén">
                </form>
            </nav>

            <div class="sidebar-results">
                <h3>Resultados de trabajo</h3>
                <a href="/resultados">• Resultados</a>
            </div>
        </aside>

        <main class="main-content">
            
            <h1 class="page-title"><%= (typeof alert != "undefined") ? alert : "Sistema de almacenaje de doble cara" %></h1>

            <div class="image-container">
                <img src="RMA.png" class="robot-img">
            </div>
            
            <% if(final){%>
            <form action="calidad" method="POST">
                <input type="submit" class="action-button" value="Disponible verificación">
            </form>
            <% } %>

        </main>
    </div>

</body>